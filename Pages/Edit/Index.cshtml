@page
@model TestApply.Pages.Edit.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-10">
                <h1><i class="fas fa-user-tie text-primary mr-3"></i>Order registration</h1>
            </div>
            <div class="text-right col-2">
                <form method="get">
                    <button id="buttonBack" asp-page="/Index" type="submit" class="btn btn-success mr-4"><i class="fas fa-undo mr-2"></i>Back</button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <section class="content">
            <!-- Manin Card -->
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <form id="formPost" method="post" autocomplete="off">
                            <div class="card-header bg-primary">
                                <h3 class="card-title"><i class="fa fa-search mr-2"></i> Order registration</h3>
                            </div>

                            <!-- /.card-header -->
                            <div class="card-body">

                                <div class="form-group col-12">
                                    <div class="row">
                                        <label for="CdPessoaFilter" class="col-sm-3 col-md-2 col-lg-2 col-form-label col-12">Order description</label>
                                        <div class="col-sm-8 col-8 col-md-8 col-lg-7 col-xl-5">
                                            <input asp-for="orderDescription" type="text" class="form-control" value="Order example">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12">
                                    <div class="row">
                                        <button id="buttonBack" type="submit" class="btn btn-primary mr-4"><i class="fas fa-plus mr-2"></i>Create</button>
                                    </div>
                                </div>
                            
                            </div>
                        
                        </form>

                    </div>

                </div>
                <!-- /.card -->

                </div>

            </div>
            <!-- /.row -->

            
        </section>

    </div><!-- /.container-fluid -->

</section>
<!-- /.content -->

